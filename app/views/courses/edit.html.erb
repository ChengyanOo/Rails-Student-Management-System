<div class="container mt-3">
<h3><%= @course.name %></h3>
  <%= form_for @course, html: {class: "form"} do |f| %>
    <div class="form-group mt-3">
      <%= f.label :name, "Course Name" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :class_number, "Course Number" %>
      <%= f.text_field :class_number, class: "form-control" %>
    </div>

    <div class="form-group mt-3">
      <%= f.label :description %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
      
    <div class="form-group mt-3">
      <%= f.label :credit_hours, "Credit Hours" %>
      <%= f.number_field :credit_hours, class: "form-control" %>
    </div>

    <%= f.submit "Save Changes", class: "btn btn-primary mt-3" %>
  <% end %>
</div>
